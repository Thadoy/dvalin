<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>de.taimos</groupId>
    <artifactId>testservice</artifactId>
    <version>1.0-SNAPSHOT</version>
    <name>testservice</name>
    <organization>
        <name>My Company</name>
        <url>http://www.company.com</url>
    </organization>
    <inceptionYear>2016</inceptionYear>
    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <serviceName>testservice</serviceName>
        <mainClass>de.taimos.testservice.ServerStarter</mainClass>
        <maxmem>512m</maxmem>
        <dvalin.version>INSERT DVALIN VERSION</dvalin.version>
    </properties>
    <prerequisites>
        <maven>3.0.0</maven>
    </prerequisites>
    <scm>
        <connection></connection>
        <developerConnection></developerConnection>
    </scm>
    <dependencies>
        <!-- Dvalin dependencies -->
        <dependency>
            <groupId>de.taimos</groupId>
            <artifactId>dvalin-daemon</artifactId>
            <version>${dvalin.version}</version>
        </dependency>
        <!--<dependency>
            <groupId>de.taimos</groupId>
            <artifactId>dvalin-jaxrs</artifactId>
            <version>${dvalin.version}</version>
        </dependency>-->
        <!--<dependency>
            <groupId>de.taimos</groupId>
            <artifactId>dvalin-mongodb</artifactId>
            <version>${dvalin.version}</version>
        </dependency>-->
        <!--<dependency>
            <groupId>de.taimos</groupId>
            <artifactId>dvalin-jpa</artifactId>
            <version>${dvalin.version}</version>
        </dependency>-->
        <!--<dependency>
            <groupId>de.taimos</groupId>
            <artifactId>dvalin-dynamodb</artifactId>
            <version>${dvalin.version}</version>
        </dependency>-->
        <!--<dependency>
            <groupId>de.taimos</groupId>
            <artifactId>dvalin-notification-aws</artifactId>
            <version>${dvalin.version}</version>
        </dependency>-->

        <!-- Test dependencies -->
        <dependency>
            <groupId>de.taimos</groupId>
            <artifactId>dvalin-test</artifactId>
            <version>${dvalin.version}</version>
            <scope>test</scope>
        </dependency>
    </dependencies>
    <build>
        <finalName>${project.artifactId}</finalName>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.3</version>
                <configuration>
                    <source>1.8</source>
                    <target>1.8</target>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-release-plugin</artifactId>
                <version>2.5.1</version>
                <configuration>
                    <tagNameFormat>v@{project.version}</tagNameFormat>
                </configuration>
            </plugin>
            <plugin>
                <groupId>de.taimos</groupId>
                <artifactId>daemon-maven-plugin</artifactId>
                <version>0.2</version>
                <executions>
                    <execution>
                        <id>daemon-header</id>
                        <phase>package</phase>
                        <goals>
                            <goal>daemon</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <version>2.8</version>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>copy-dependencies</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${project.build.directory}/lib</outputDirectory>
                            <overWriteReleases>false</overWriteReleases>
                            <overWriteSnapshots>false</overWriteSnapshots>
                            <overWriteIfNewer>true</overWriteIfNewer>
                            <prependGroupId>true</prependGroupId>
                            <includeScope>runtime</includeScope>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <artifactId>maven-assembly-plugin</artifactId>
                <version>2.5.4</version>
                <executions>
                    <execution>
                        <id>make-assembly</id>
                        <phase>package</phase>
                        <goals>
                            <goal>single</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <descriptor>src/assembly/bin.xml</descriptor>
                    <finalName>${project.artifactId}</finalName>
                    <appendAssemblyId>false</appendAssemblyId>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-deploy-plugin</artifactId>
                <version>2.8.1</version>
                <configuration>
                    <skip>true</skip>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-install-plugin</artifactId>
                <version>2.5.1</version>
                <configuration>
                    <skip>true</skip>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>exec-maven-plugin</artifactId>
                <version>1.4.0</version>
                <configuration>
                    <mainClass>${mainClass}</mainClass>
                    <systemProperties>
                        <systemProperty>
                            <key>startupMode</key>
                            <value>run</value>
                        </systemProperty>
                    </systemProperties>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>
